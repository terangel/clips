            "activities": [
                {
                    "id": "act_001",
                    "name": "Bodyweight Squats",
                    "description": "Stand with feet shoulder-width apart. Lower your body by bending your knees and hips, keeping your back straight. Go as low as comfortable, then return to standing.",
                    "repetitions": "12-15",
                    "sets": 3,
                    "rest": "60s",
                    "video": "https://ware.do/activities/act_001/video/001.mp4",
                    "thumbnail": "https://ware.do/activities/act_001/thumbnail/001.jpg"
                },
                {
                    "id": "act_002",
                    "name": "Glute Bridge",
                    "description": "Lie on your back with knees bent and feet flat on the floor. Lift your hips towards the ceiling by squeezing your glutes, then lower back down.",
                    "repetitions": "15-20",
                    "sets": 3,
                    "rest": "45s",
                    "video": "https://ware.do/activities/act_002/video/001.mp4",
                    "thumbnail": "https://ware.do/activities/act_002/thumbnail/001.jpg"
                },
                {
                    "id": "act_003",
                    "name": "Alternating Reverse Lunges",
                    "description": "Stand tall, step back with one foot and lower your body until both knees are bent at 90 degrees. Push through the front heel to return to standing and repeat on the other side.",
                    "repetitions": "10-12 per leg",
                    "sets": 3,
                    "rest": "60s",
                    "video": "https://ware.do/activities/act_003/video/001.mp4",
                    "thumbnail": "https://ware.do/activities/act_003/thumbnail/001.jpg"
                },
                {
                    "id": "act_004",
                    "name": "Standing Calf Raises",
                    "description": "Stand with feet hip-width apart. Raise your heels off the ground as high as possible, then lower back down slowly.",
                    "repetitions": "20",
                    "sets": 2,
                    "rest": "45s",
                    "video": "https://ware.do/activities/act_004/video/001.mp4",
                    "thumbnail": "https://ware.do/activities/act_004/thumbnail/001.jpg"
                },
                {
                    "id": "act_005",
                    "name": "Single-Leg Glute Bridge",
                    "description": "Lie on your back with one knee bent and the other leg extended. Lift your hips by squeezing the glute of the bent leg, then lower back down. Switch legs after completing the set.",
                    "repetitions": "45 sec each side",
                    "sets": 2,
                    "rest": "30s",
                    "video": "https://ware.do/activities/act_005/video/001.mp4",
                    "thumbnail": "https://ware.do/activities/act_005/thumbnail/001.jpg"
